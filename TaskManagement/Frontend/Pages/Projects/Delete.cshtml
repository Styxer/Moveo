@page "{id:guid}"
@model DeleteModel
@{
    ViewData["Title"] = "Delete Project";
}

<h1>Delete Project</h1>

<h3>Are you sure you want to delete this project?</h3>
<div>
    <h4>@Model.Project?.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Project!.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Project!.Description)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="ProjectId" /> @* Keep the ID *@
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Details" asp-route-id="@Model.ProjectId">Cancel</a>
    </form>
</div>